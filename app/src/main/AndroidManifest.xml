<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beta.interview.kakao.kakaointerview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/kakao_interview_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".common.KakaoInterviewApplication"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">
        <meta-data android:name="com.beta.interview.kakao.kakaointerview.module.KakaoInterviewGlideModule"
            android:value="GlideModule" />
        <activity android:name=".activitys.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activitys.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activitys.ImageDetailActivity"
            android:screenOrientation="portrait"/>
    </application>
</manifest>